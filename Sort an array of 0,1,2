void sortColors(vector<int>& nums) {
    int n = nums.size();
    int low = 0, mid = 0, high = n-1;

    while (mid<=high) {
        switch(nums[mid]) {
        case 0 :
            {
                swap(nums[low],nums[mid]);
                low++; mid++;
                break;
            }
        case 1:
            {
                mid++;
                break;
            }
        case 2:
            {
                swap(nums[high],nums[mid]);
                high--;
                break;
            }

    }
    }
}

int main() {

    //0 2 1 1 0 2 2 0 1
    vector <int> v;
    v.push_back(0);
    v.push_back(1);
    v.push_back(1);
    v.push_back(1);
    v.push_back(0);
    v.push_back(2);
    v.push_back(2);
    v.push_back(1);
    v.push_back(2);

    sortColors(v);

    for (int i=0; i<v.size(); i++) {
        cout << v[i] << " ";
    }

}
